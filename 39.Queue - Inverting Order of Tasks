39.Queue - Inverting Order of Tasks
import java.util.*;

public class ReverseQueue {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // number of customers
        int n = sc.nextInt();
        int[] tickets = new int[n];

        // ticket numbers
        for (int i = 0; i < n; i++) {
            tickets[i] = sc.nextInt();
        }

        // Reverse and print
        for (int i = n - 1; i >= 0; i--) { //starts at the last index (n-1) and goes until 0
            System.out.print(tickets[i]);
            if (i != 0) {
                System.out.print(" ");
            }
        }
    }
}
