59. Binary Search Tree - Customer Age-Based Filtering


import java.util.*;

class Node {
    int value;
    Node left, right;

    Node(int value) {
        this.value = value;
        this.left = null;
        this.right = null;
    }
}

public class Solution {

    // Insert into BST
    static Node insert(Node root, int value) {
       if (root==null)
           return new Node(value);
        
        if(value<root.value){
            root.left=insert(root.left,value);
        }
        else{
        root.right=insert(root.right,value);
        }
        return root;
    }

    // Trim the BST
    static Node trimBST(Node root, int low, int high) {
        if(root==null)
            return null;
        
        if(root.value<low)
        {
            return trimBST(root.right,low,high);
        }
        if(root.value > high)
        {
            return trimBST(root.left,low,high);
        }
        root.left=trimBST(root.left,low,high);
        root.right=trimBST(root.right,low,high);
        
        return root;
    }

    // Preorder traversal
    static void preorder(Node root) {
        if(root==null) return;
        
        System.out.print(root.value+" ");
        preorder(root.left);
        preorder(root.right);
    }

    public static void main(String[] args) {
     Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        Node root=null;
        for(int i=0;i<n;i++)
        {
            int value=sc.nextInt();
            root=insert(root,value);
        }
        
        int low=sc.nextInt();
        int high=sc.nextInt();
        
         Node trimmed = trimBST(root, low, high);
        preorder(trimmed);
    }
}
