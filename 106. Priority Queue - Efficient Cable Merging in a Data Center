106. Priority Queue - Efficient Cable Merging in a Data Center

import java.io.*;
import java.util.*;

public class Solution 
{

    public static void main(String[] args) 
    {
        Scanner sc=new Scanner(System.in);
        PriorityQueue<Integer>pq=new PriorityQueue<>(); //2 3 4 6 
        int n=sc.nextInt();
        for(int i=0;i<n;i++)
        {
            int value=sc.nextInt();
            pq.add(value);//4 3 2 6 
        }
        
        //pq   [2,3,4,6]  [4,5,6]   [9,6]   [15]
        int size=pq.size();  //4
        List<Integer>result=new ArrayList<>();  //[5,9,15]
        for(int i=0;i<size-1;i++) //0  1  2  
        { 
            int a=pq.poll(); //2  //4   //6
            int b=pq.poll();  //3  //5  //9
            int total=a+b;  //2+3=5  //4+5=9  //6+9=15
            result.add(total);//5  //9  //15
            pq.add(total);//5  9  15
        }
        int total=0;
        for(int i=0;i<result.size();i++) //0 1 2
        {
            total+=result.get(i); //5+0=5  9+5=14  15+14=29
        }
        System.out.println(total); //29
    }
}
