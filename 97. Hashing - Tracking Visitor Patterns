97. Hashing - Tracking Visitor Patterns


import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) 
    {
        /*
        7
2 0 6 1 5 3 7*/
        
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int[]arr=new int[n]; //2 0 6 1 5 3 7
        for(int i=0;i<n;i++)
        {
            int value=sc.nextInt();
            arr[i]=value;
        }
        HashSet<Integer>hs=new HashSet<>();
       
        for(int i=0;i<n;i++) 
        {
            hs.add(arr[i]); //2 0 6 1 5 3 7
        }
         ArrayList<Integer>list=new ArrayList<>(hs);//2 0 6 1 5 3 7
        Collections.sort(list); //0 1 2 3 5 6 7
        int current_count=1;
        int max_count=1;
        for(int i=0;i<list.size()-1;i++) //i=0 i<7-1 ;i++ //0  1 2 3 4 5
        {
            if(list.get(i+1)-list.get(i) ==1)//1-0=1 //2-1=1  //3-2=1  //5-3=2 not  //6-5=1 //7-6=1
            {
               current_count+=1;//2 3 4  //2
                max_count=Math.max(current_count,max_count);//math.max(2,0)=2 math.max(3,2)=3  math.max(4,3)=4  math.max(1,4)=4 math.max(2,4)=4
            }
            else
            {
                current_count=1; //1
            }
        }
        System.out.println(max_count);//4
    }
}â€ƒ
