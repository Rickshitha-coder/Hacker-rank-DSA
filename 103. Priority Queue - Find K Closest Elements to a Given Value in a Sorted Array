103. Priority Queue - Find K Closest Elements to a Given Value in a Sorted Array

import java.io.*;
import java.util.*;
/*
5 
1 3 4 10 12 
4 
2 */
public class Solution 
{
    public static void main(String[] args) 
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt(); //5
        int[]arr=new int[n];
        for(int i=0;i<n;i++)
        {
            int value=sc.nextInt();
            arr[i]=value; //1 3 4 10 12
        }
        int target=sc.nextInt();//4
        int closest=sc.nextInt();//2
        
        PriorityQueue<int[]>pq=new PriorityQueue<>(
        (a,b)->a[0]-b[0]);//(3,1 =2)(1,6=-5)(6,8=-2)
        //(1,3)(3,1)(6,10)(8,12)
        for(int i=0;i<n;i++)  //1  3  4  10  12
        {
            if(arr[i]==target)  //4==4
            {
                continue;
            }
            int dist=Math.abs(arr[i]-target);  //1-4=3 //3-4=1  //10-4=6 //12-4=8
            pq.add(new int[]{dist,arr[i]});//3,1  //1,3  //6,10  //8,12
        }
        List<Integer>result=new ArrayList<>();
        for(int i=0;i<closest;i++) //i=0 i<2 0 1
        {
            result.add(pq.poll()[1]);  //3 1
        }
        Collections.sort(result); //1 3
        for(int val:result)
        {
            System.out.print(val+" "); //1 3
        }
        }
    }
