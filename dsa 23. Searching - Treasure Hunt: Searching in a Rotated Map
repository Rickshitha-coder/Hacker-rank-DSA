23. Searching - Treasure Hunt: Searching in a Rotated Map


import java.io.*;
import java.util.*;

public class Solution 
{
    static int search(int[] arr, int n, int target)
    {
        int low=0; //0  4  //4
        int high=n-1; //7-1=6  //4
        
        
        //arr 4 5 6 7 0 1 2
        while(low<=high)  //0<=6  4 <=6 4<=4
        {
            int mid=(low+high)/2; //0+6/2 =3  //4+6/2=5  //4+4/2=4
             
            if(arr[mid]==target) //arr[3]==0  7!=0  //arr[5] 1==0  //arr[4] ==0
            {
                return mid;  //4
            }
        
       
        
        if(arr[low] <= arr[mid]) //arr[0] <=arr[3]  4 <=7 //arr[4] 0 <=arr[5] 1
        {
            if(target >= arr[low] && target < arr[mid] ) //arr[0] 4 <=0 && arr[mid] 7 >0  //arr[4]  0 <=0 && arr[5]  1 >0
            {
                high=mid-1;  //5-1=4
            }
            else
            {
                low=mid+1; //3+1=4
            }
        }
        else
        {
            if(arr[mid] < target && target <= arr[high])
            {
                low=mid+1;
            }
            else
            {
                high=mid-1;
            }
        }
        }
        return -1;
    }
    
    public static void main(String[] args) 
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt(); //7
        
        
        int[] arr=new int[n];//4 5 6 7 0 1 2

        
        for(int i=0;i<n;i++)
        {
            arr[i]=sc.nextInt();
        }
        
        int target=sc.nextInt(); 
        
        int result=search(arr,n,target);
        
        System.out.print(result);
    }
}
