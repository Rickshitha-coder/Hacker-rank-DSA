26. Searching - Finding the Oldest Artifact in a Rotated Historical Timeline


import java.util.*;

public class Main {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();//5

        int[] arr = new int[n]; //3 4 5 1 2

        

        for(int i = 0; i < n; i++) {

            arr[i] = sc.nextInt();

        }

        int low = 0, high = n - 1;//0. 4.  3 4. 3 3

        while (low < high) {//0<4 3<4 3<3 false 

            int mid = (low + high) / 2;//0+4/2=2  3+4/2 =3

            if (arr[mid] > arr[high]) {//arr[2] > 4 1>4

                low = mid + 1;// 2+1

            } else {

                high = mid; //3

            }

        }

        System.out.println(arr[low]);  //arr[3] =1

    }

}	
