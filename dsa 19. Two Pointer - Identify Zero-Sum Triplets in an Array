19. Two Pointer - Identify Zero-Sum Triplets in an Array

import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();//5
        int[] arr = new int[n]; //0 1 1 -2 -1

        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }
    
        Arrays.sort(arr);  //-2 -1 0 1 1 

        for (int i = 0; i < n - 2; i++) { //i=0 i<3   //0  1  2 

            // skip duplicate first elements
            if (i > 0 && arr[i] == arr[i - 1]) //0>0 && arr[0]==arr[-1]  //1>0 && -1 ==-2  //0>0 && 0 ==-1 
                continue; //

            int left = i + 1;//0+1=1 //1+1=2 //2+1=3 
            int right = n - 1;//5-1=4 //5-1=4 //5-1=4 

            while (left < right) {//1<4 2<4 3<4//2<4  //3<4 
                int sum = arr[i] + arr[left] + arr[right];//arr[0]+arr[1]+arr[4] = -2-1+1=-2 arr[0]+arr[2]+arr[4]=-2+0+1 =-1  arr[0]+arr[3]+arr[4]=-2+1+1=0 ||-1+0+1=0 ||0+1+1=2  

                if (sum == 0) { //i=0 sum==0  //  i=1sum==0
                    System.out.println(arr[i] + " " + arr[left] + " " + arr[right]); //-2+" "+1+" "+1  //-1+ " "+0+" "+1

                    // skip duplicate second & third elements
                    while (left < right && arr[left] == arr[left + 1]) left++; //2 <4 && 0==1
                    while (left < right && arr[right] == arr[right - 1]) right--;//2<4 && 1 == 1   right--=3

                    left++;//2++=3
                    right--;//3--=2
                }
                
                else if (sum < 0) { //-2<0 //-1<0
                    left++; //1++=2 //2++=3
                }
                else { //2 >0  //2>0
                    right--; //4--=3 
                }
            }
        }
    }
}
