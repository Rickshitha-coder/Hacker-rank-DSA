29. Searching - Locating a Key in a Rotated Sorted Warehouse Inventory


import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();//7
        int[] nums = new int[n];

     
        for (int i = 0; i < n; i++) {
            nums[i] = sc.nextInt(); //2 5 6 0 0 1 2
        }



        int target = sc.nextInt();    //3

        System.out.println(search(nums, target));
    }

   
    public static boolean search(int[] nums, int target) {
        int low = 0; //0
        int high = nums.length - 1; //7-1=6

        while (low <= high) { //0<=6
            int mid = (low + high) / 2; //0+6/2=3

        //2 5 6 0 0 1 2
       // 0 1 2 3 4 5 6  --index
            if (nums[mid] == target) { //nums[3]    0==3
                return true;//true
            }

         
      
            if (nums[low] == nums[mid] && nums[mid] == nums[high]) { //2 ==0 && 0==2
                low++;
                high--;
            }
            else if (nums[low] <= nums[mid]) { //2 <=0
                
                if (nums[low] <= target && target < nums[mid]) {
                    high = mid - 1;
                } else {
                    low = mid + 1;
                }
            }
            else { 
                
                if (nums[mid] < target && target <= nums[high]) { //0<7 && 7 <=2
                    low = mid + 1;
                } else {
                    high = mid - 1;
                }
            }
        }
        return false; //false
    }
}
