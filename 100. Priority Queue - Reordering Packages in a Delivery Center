100. Priority Queue - Reordering Packages in a Delivery Center


import java.io.*;
import java.util.*;
/*
7
6 5 3 2 8 10 9
3*/
public class Solution {
    
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int[] arr=new int[n];
        for(int i=0;i<n;i++)
        {
            arr[i]=sc.nextInt();  //6 5 3 2 8 10 9
        }
        
        int k=sc.nextInt();  //3
        PriorityQueue<Integer> pq= new PriorityQueue<>();
        int index=0;
        
        //get the first k elements
        for(int i=0;i<=k && i<n;i++) // 0 1 2 3
        {
            pq.add(arr[i]);//6 5 3 2 --[2,3,5,6]
        }
        
        //[2,3,5,6]
        //update the array , get the next element
        
        for(int i=k+1;i<n;i++) //i=3+1 = 4 5 6 7
        {
            arr[index++]=pq.poll(); //arr[0]=2 removed [2,5,3,2,8,10,9]  [2,3,3,2,8,10,9]  [2,3,5,2,8,10,9]
            pq.add(arr[i]);  //arr[4] [3,5,6,8]  //arr[5] [5,6,8,10] //arr[6] [6,8,10,9]
        }
        //[6,8,9,10]  [8,9,10]  [9,10]  [10]  []
        while(!pq.isEmpty())
        {
            arr[index++]=pq.poll();//arr[0]=6 removes [2,3,5,6,8,10,9]  [2,3,5,6,8,10,9]  [2,3,5,6,8,9,10]
        }
        
        for(int i=0;i<n;i++)
        {
            System.out.print(arr[i]+" ");
        }
    
    }
}â€ƒ
